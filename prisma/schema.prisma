// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String?
  firstname String?
  lastname String?
  email String @unique
  password String?
  phone String?
  validated DateTime?
  role Int @default(1)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}